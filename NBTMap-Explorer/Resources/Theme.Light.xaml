<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="Colors.xaml"/>
	</ResourceDictionary.MergedDictionaries>

	<SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource White}"/>
	<SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource Gray100}"/>

	<SolidColorBrush x:Key="SurfacePrimaryBrush" Color="{StaticResource White}"/>
	<SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="{StaticResource Gray100}"/>
	<SolidColorBrush x:Key="SurfaceTertiaryBrush" Color="{StaticResource Gray200}"/>

	<SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Gray950}"/>
	<SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Gray700}"/>
	<SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource Gray500}"/>
	<SolidColorBrush x:Key="TextOnBrandBrush" Color="{StaticResource White}"/>
	<SolidColorBrush x:Key="TextOnAccentBrush" Color="{StaticResource Gray950}"/>
	<SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource Gray300}"/>
	<SolidColorBrush x:Key="BorderSecondaryBrush" Color="{StaticResource Gray200}"/>

	<SolidColorBrush x:Key="ActionPrimaryBrush" Color="{StaticResource Principal400}"/>
	<SolidColorBrush x:Key="ActionPrimaryHoverBrush" Color="{StaticResource Principal500}"/>
	<SolidColorBrush x:Key="ActionPrimaryActiveBrush" Color="{StaticResource Principal600}"/>
	<SolidColorBrush x:Key="ActionPrimaryDisabledBrush" Color="{StaticResource Principal200}"/>

	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent400}"/>
	<SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource Accent500}"/>

	<SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource Error400}"/>
	<SolidColorBrush x:Key="StatusErrorBackgroundBrush" Color="{StaticResource Error100}"/>

</ResourceDictionary>